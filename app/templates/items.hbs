<h3>My To-Dos</h3>

<div class="col-md-6">
    {{#each model as |item|}}
    <h4>Item: {{item.description}}</h4>
    <p><strong>Date:</strong> {{item.date}}</p>
    <p><strong>Energy:</strong> {{item.energy_needed}}</p>
    <p><strong>Completed?</strong> {{item.is_completed}}</p>
    <p><strong>Crucial?</strong> {{item.is_crucial}}</p>
    <button {{action 'deleteItem' item}}>Delete Item</button>
    {{/each}}
  {{new-item createItem='createItem'}}
</div>
